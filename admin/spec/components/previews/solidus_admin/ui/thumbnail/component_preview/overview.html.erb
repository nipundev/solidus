<div class="mb-8">
  <h6 class="text-gray-500 mb-3 mt-0">
    Empty
  </h6>
  <% current_component::SIZES.keys.each do |size| %>
    (size: <%= size.inspect %>)
    <%= render current_component.new(size: size) %>
  <% end %>
</div>

